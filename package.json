    "dependencies": {
        "axios": "^1.6.2",
        "cheerio": "^1.0.0-rc.12",
        "cli-progress": "^3.12.0",
        "path": "^0.12.7",
        "url": "^0.11.3",
        "xpath-html": "^1.0.3"
    },
    "devDependencies": {
        "@types/cli-progress": "^3.11.5",
        "@types/node": "^20.10.4"
    }
}
